{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  // Route all `/api` requests to the `api` folder
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)", // Route static requests to the `public` folder
      "dest": "/public/$1"
    }
  ]
}
